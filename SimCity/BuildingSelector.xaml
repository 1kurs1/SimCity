<UserControl x:Class="SimCity.UI.BuildingSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="250">

    <Border Background="#2C3E50" Padding="10">
        <StackPanel>
            <!-- Деньги -->
            <Border Background="#34495E" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="💰 ДЕНЬГИ" Foreground="#ECF0F1" FontWeight="Bold" 
                              HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock x:Name="MoneyDisplay" Text="5000" 
                              Foreground="#F1C40F" FontSize="18" FontWeight="Bold"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Строительство -->
            <TextBlock Text="🏗️ СТРОИТЕЛЬСТВО" Foreground="#ECF0F1" FontWeight="Bold" 
                      Margin="0,10,0,5"/>

            <!-- Жилые дома -->
            <Expander Header="🏠 Жилые дома" Foreground="#ECF0F1" IsExpanded="True">
                <StackPanel Margin="10,5">
                    <Button x:Name="btnHouseSmall" Content="Маленький дом (2x2)" 
                           Click="SelectHouseSmall" Margin="0,2" Padding="10,5"
                           Background="#3498DB" Foreground="White"
                           ToolTip="Стоимость: 100$, Доход: 10$/сек"/>
                    <Button x:Name="btnHouseMedium" Content="Средний дом (3x3)" 
                           Click="SelectHouseMedium" Margin="0,2" Padding="10,5"
                           Background="#2980B9" Foreground="White"
                           ToolTip="Стоимость: 250$, Доход: 25$/сек"/>
                    <Button x:Name="btnApartment" Content="Апартаменты (4x3)" 
                           Click="SelectApartment" Margin="0,2" Padding="10,5"
                           Background="#1F618D" Foreground="White"
                           ToolTip="Стоимость: 500$, Доход: 50$/сек"/>
                </StackPanel>
            </Expander>

            <!-- Промышленные -->
            <Expander Header="🏭 Промышленные" Foreground="#ECF0F1" Margin="0,5,0,0">
                <StackPanel Margin="10,5">
                    <Button x:Name="btnFactorySmall" Content="Маленькая фабрика (3x3)" 
                           Click="SelectFactorySmall" Margin="0,2" Padding="10,5"
                           Background="#7F8C8D" Foreground="White"
                           ToolTip="Стоимость: 300$, Доход: 40$/сек"/>
                    <Button x:Name="btnFactoryLarge" Content="Большая фабрика (5x4)" 
                           Click="SelectFactoryLarge" Margin="0,2" Padding="10,5"
                           Background="#5D6D7E" Foreground="White"
                           ToolTip="Стоимость: 800$, Доход: 100$/сек"/>
                </StackPanel>
            </Expander>

            <!-- Коммерческие -->
            <Expander Header="🛍️ Коммерческие" Foreground="#ECF0F1" Margin="0,5,0,0">
                <StackPanel Margin="10,5">
                    <Button x:Name="btnShop" Content="Магазин (2x2)" 
                           Click="SelectShop" Margin="0,2" Padding="10,5"
                           Background="#E67E22" Foreground="White"
                           ToolTip="Стоимость: 150$, Доход: 20$/сек"/>
                    <Button x:Name="btnMall" Content="Торговый центр (4x4)" 
                           Click="SelectMall" Margin="0,2" Padding="10,5"
                           Background="#D35400" Foreground="White"
                           ToolTip="Стоимость: 600$, Доход: 80$/сек"/>
                </StackPanel>
            </Expander>

            <!-- Инфраструктура -->
            <Expander Header="🛣️ Инфраструктура" Foreground="#ECF0F1" Margin="0,10,0,0">
                <StackPanel Margin="10,5">
                    <Button x:Name="btnRoad" Content="Дорога" 
                           Click="SelectRoad" Margin="0,2" Padding="10,5"
                           Background="#95A5A6" Foreground="White"
                           ToolTip="Стоимость: 50$, Не приносит дохода"/>
                    <Button x:Name="btnPower" Content="Электростанция" 
                           Click="SelectPower" Margin="0,2" Padding="10,5"
                           Background="#F39C12" Foreground="White"/>
                    <Button x:Name="btnWater" Content="Водонапорка" 
                           Click="SelectWater" Margin="0,2" Padding="10,5"
                           Background="#3498DB" Foreground="White"/>
                </StackPanel>
            </Expander>

            <!-- Информация -->
            <Border Background="#34495E" CornerRadius="5" Padding="10" Margin="0,15,0,0">
                <TextBlock Text="ℹ️ Кликните на клетку карты для строительства" 
                          Foreground="#BDC3C7" FontSize="11" TextWrapping="Wrap"/>
            </Border>
        </StackPanel>
    </Border>
</UserControl>