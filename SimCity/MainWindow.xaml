<Window x:Class="SimCity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SimCity.UI"
        Title="SimCity" Height="768" Width="1200"
        WindowStartupLocation="CenterScreen">

    <DockPanel LastChildFill="True" ClipToBounds="True">
        <!-- Верхняя панель с деньгами -->
        <Border DockPanel.Dock="Top" Background="#333" Height="40">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="💰 Деньги: " Foreground="White" Margin="10,0"/>
                <TextBlock x:Name="MoneyText" Text="5000" Foreground="Gold" 
                          FontWeight="Bold" FontSize="16" Width="100"/>
            </StackPanel>
        </Border>

        <!-- Левая панель с выбором зданий (фиксированная ширина 250) -->
        <local:BuildingSelector DockPanel.Dock="Left" Width="250"/>

        <!-- Основная игровая область с обрезкой -->
        <Grid ClipToBounds="True">
            <local:GameCanvas x:Name="GameCanvas" 
                            Margin="0,0,0,0"/>
        </Grid>
    </DockPanel>
</Window>